<?xml version="1.0" encoding="utf-8"?>




    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        >


        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/placeholder"
            android:layout_width="match_parent"
            android:layout_height="@dimen/alto_template_producto"
            android:scaleType="center"
            />

        <ImageView
            android:id="@+id/img_producto"
            android:layout_width="match_parent"
            android:layout_height="@dimen/alto_template_producto"
            android:scaleType="fitXY"
            />

        <ImageView
            android:id="@+id/btn_descripcion"
            android:layout_width="@dimen/tam_btn_descripcion"
            android:layout_height="@dimen/tam_btn_descripcion"
            android:src="@mipmap/ic_carta_descripcion"
            android:layout_alignBottom="@id/img_producto"
            android:layout_alignRight="@id/img_producto"
            android:layout_marginRight="@dimen/super_margin_small"

            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"

            >
            <TextView
                android:id="@+id/txtconteo"
                android:layout_width="@dimen/tam_btn_cantidad_producto"
                android:layout_height="@dimen/tam_btn_cantidad_producto"
                android:text="0"
                android:textSize="@dimen/tam_text_cantidad_producto"
                android:textColor="@color/blanco"
                android:background="@drawable/text_view_redondo"
                android:gravity="center"

                />
            <TextView
                android:id="@+id/btn_disminuir"
                android:layout_width="@dimen/tam_btn_cantidad_producto"
                android:layout_height="@dimen/tam_btn_cantidad_producto"
                android:text="â”€"
                android:textColor="@color/blanco"
                android:background="@drawable/img_view_redondo"
                android:layout_marginTop="@dimen/margin_small"
                android:gravity="center"
                />


        </LinearLayout>

</RelativeLayout>





























