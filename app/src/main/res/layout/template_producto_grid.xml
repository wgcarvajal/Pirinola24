<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/placeholder"
        android:layout_width="@dimen/tamano_pirinola_carga_producto_grid"
        android:layout_height="@dimen/tamano_pirinola_carga_producto_grid"
        android:scaleType="fitXY"
        android:layout_centerInParent="true"
        />

    <ImageView
        android:id="@+id/img_producto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tam_imagen_producto_grid"
        android:scaleType="fitXY"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        >
            <TextView
                android:id="@+id/txtconteo"
                android:layout_width="@dimen/tam_btn_cantidad_prod_grid"
                android:layout_height="@dimen/tam_btn_cantidad_prod_grid"
                android:text="0"
                android:textSize="@dimen/tam_text_cantidad_producto_grid"
                android:textColor="#ffffff"
                android:background="@drawable/text_view_redondo"
                android:gravity="center"
                />


        <TextView
            android:id="@+id/btn_disminuir"
            android:layout_width="@dimen/tam_btn_cantidad_prod_grid"
            android:layout_height="@dimen/tam_btn_cantidad_prod_grid"
            android:text="â”€"
            android:textColor="@color/blanco"
            android:background="@drawable/img_view_redondo"
            android:layout_marginTop="@dimen/margin_small"
            android:gravity="center"
            />
    </LinearLayout>
</RelativeLayout>